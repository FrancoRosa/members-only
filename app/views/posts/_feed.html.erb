<div>
  <h1 class="title is-1">Posts</h1>

  <% if user_signed_in? %>
    <div class="m-b">
      <h3>What's in your mind?<h3>
      <%= form_for :post, url: "/posts" do |f| %>
        <div class="field">
          <div class="control">
            <%= f.text_area :post, class: "textarea is-danger", cols: 40, rows: 2 %>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <%= f.submit "share", class: "button is-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% @posts.each do |post| %>
    <div class="box">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <% if user_signed_in? %>
                <strong><%= post.user.name %></strong>
                <small><%= post.user.email %></small>
              <% end %>
              <br>
              <%= post.post %>
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <% if user_signed_in? && current_user.email == post.user.email %>
                <%= link_to post_path(post) ,method: :delete, class: "level-item", data: { confirm: "Are you sure you want to delete this post?" } do %>
                  <i class="fas fa-trash-alt is-danger"></i> delete
                <% end %>
              <% end %>
            </div>
          </nav>
        </div>
      </article>
    </div>

  <% end %>
</div>