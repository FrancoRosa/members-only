<div class="columns is-mobile is-centered">
  <h2 class="title">Sign up</h2>
</div>

<div class="level">
  <div class="level-item">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, class: "control" %>
      </div>

      <div class="field">
        <%= f.label :member_status %><br />
        <%= f.text_field :member_status, class: "control" %>
      </div>


      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "control" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "control" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "control" %>
      </div>

      <div class="actions">
        <div class="rows">
            <div class="row">
              <%= f.submit "Sign up", class: "button is-info" %>
            </div>
            <div class="row">
              <%= render "devise/shared/links" %>
            </div>
        </div>
      </div>
    <% end %>
    
  </div>
</div>



